generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider          = "postgresql"
  url               = env("DB_DATABASE_URL")
  shadowDatabaseUrl = env("DB_DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  Group     Group[]
}

model Group {
  id          String       @id @default(cuid())
  userId      String
  user        User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  name        String
  description String
  coordinates Json // Хранит координаты в формате [долгота, широта]
  zoom        Int
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
  Attraction  Attraction[]
}

model Attraction {
  id          String   @id @default(cuid())
  groupId     String
  group       Group    @relation(fields: [groupId], references: [id], onDelete: Cascade)
  name        String
  description String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
